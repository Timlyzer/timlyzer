{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Timlyzer",
  "version": "0.1.0",
  "identifier": "com.timlyzer.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Timlyzer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "category": "Productivity",
    "shortDescription": "Automatic time tracking application",
    "longDescription": "Timlyzer automatically tracks your computer usage and helps you understand how you spend your time.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}